# ============================================
# PYTHON BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# This file is used by the Python backend running on VPS

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port and host for the FastAPI server
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# SECURITY (CRITICAL - Change in production!)
# ============================================
# JWT secret for token verification
# IMPORTANT: Must match the JWT_SECRET in frontend/.env.local
# Generate a strong random string (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed frontend URLs
# Add your production frontend URL here
# Example: http://localhost:3000,https://yourdomain.com
FRONTEND_URLS=http://localhost:3000,https://yourdomain.com

# ============================================
# BOT CONFIGURATION
# ============================================
# Delay between bot cycles (in seconds)
# Default: 300 seconds (5 minutes)
DELAY_BETWEEN_CYCLES=300

# Delay between individual posts (in seconds)
# Default: 5 seconds
DELAY_BETWEEN_POSTS=5

# ============================================
# SESSION MANAGEMENT
# ============================================
# Maximum number of concurrent sessions per user
# Default: 7
MAX_CONCURRENT_SESSIONS_PER_USER=7

# ============================================
# HEARTBEAT CONFIGURATION
# ============================================
# Heartbeat TTL in seconds
# Sessions with heartbeats older than this are considered stale
# Default: 30 seconds
HEARTBEAT_TTL=30

# ============================================
# LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# ============================================
# ENVIRONMENT
# ============================================
# Set to 'development' for local dev, 'production' for production
ENV=production






