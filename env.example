# ============================================
# FRONTEND ENVIRONMENT VARIABLES (Next.js)
# Deploy to Vercel
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Secrets (generate strong random strings)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars

# NowPayments Configuration
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret
NEXT_PUBLIC_NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@hqadz.com

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Python Backend URL (VPS address)
PYTHON_BACKEND_URL=http://your-vps-ip:8000

# Stock Management
LOW_STOCK_THRESHOLD=10

# ============================================
# PYTHON BACKEND ENVIRONMENT VARIABLES
# Deploy to VPS
# ============================================

# No environment variables needed for Python backend
# It's a dumb execution engine that receives all config via API calls from Next.js
